@model CkeckIn.Models.Questions.Thread.ThreadCreateView

@{
    ViewData["Title"] = "Создание новой темы";
}

<div class="row">

    <div class="col-md-8 col-xs-8">
        <div class="x_panel">
            <div class="x_title">
                <h2>
                    <i class="fa fa-align-left"></i>
                    @Html.ActionLink("Репозиторий", "Index", "Question") >
                    @Html.ActionLink("Дисцилплины", "Index", "Question") >
                    @Html.ActionLink("Список тем", "Index", "Question") >
                    <b>
                        @Html.ActionLink("Создание новой темы", "Create", "Thread")
                    </b>

                </h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <form asp-action="Create">
                    <div class="form-horizontal">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="ThreadName" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <input asp-for="ThreadName" class="form-control" />
                                <span asp-validation-for="ThreadName" class="text-danger" />
                            </div>
                        </div>

                        <div class="form-group">
                            <label asp-for="DisciplineId" class="col-md-2 control-label"></label>
                            <div class="col-md-10">
                                <select asp-for="DisciplineId" class="select2_single form-control" asp-items="@Model.DisciplineSelectList"></select>
                            </div>
                        </div>


                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" value="Добавить тему" class="btn btn-default" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @Html.Partial("PageDescriptionView", new PageDescriptionView
    {
        Title = "Подсказка",
        Messsage = "На этой странице вы можете создать новую тему, укажите ее название и выбирете из выдающего списка связанную с ней дисциплину"
    })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
