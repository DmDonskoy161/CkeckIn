                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.DisciplineName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.DisciplineName)
                    </dd>
                    <dt>
                        @Html.DisplayNameFor(model => model.CreatorName)
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.CreatorName)
                    </dd>
                </dl>
                
                    <div class="col-md-4 col-md-offset-1" style="margin-bottom: 20px;">
                        <div id="gender" class="btn-group">
                            @Html.ActionLink("Отмена", "Index", "Process", null, new {@class = "btn btn-default" })
                            @Html.ActionLink("Начать тестирование", "StartProcess", "Process", new {id = Model.TestId}, new { @class = "btn btn-primary" })
                        </div>
                    </div>

            </div>
